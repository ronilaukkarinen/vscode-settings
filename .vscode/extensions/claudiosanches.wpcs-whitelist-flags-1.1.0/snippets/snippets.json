{
    "WPCS: cache ok": {
        "prefix": "wpcs_cache",
        "body": "// phpcs:ignore WordPress.DB.DirectDatabaseQuery.NoCaching",
        "description": "Allow database query without caching"
    },
    "WPCS: CSRF ok": {
        "prefix": "wpcs_csrf",
        "body": "// phpcs:ignore WordPress.Security.NonceVerification",
        "description": "No need for nonce verification/CSRF"
    },
    "WPCS: db call ok": {
        "prefix": "wpcs_db_call",
        "body": "// phpcs:ignore WordPress.Sniffs.DB.DirectDatabaseQuery",
        "description": "Allow direct database query"
    },
    "WPCS: input var ok": {
        "prefix": "wpcs_input_var",
        "body": "// phpcs:ignore WordPress.Security.EscapeOutput",
        "description": "Allow use of superglobal"
    },
    "WPCS: loose comparison ok": {
        "prefix": "wpcs_loose_comparison",
        "body": "// phpcs:ignore WordPress.PHP.StrictComparisons.LooseComparison",
        "description": "Allow loose comparison"
    },
    "WPCS: override ok": {
        "prefix": "wpcs_override",
        "body": "// phpcs:ignore WordPress.WP.GlobalVariablesOverride",
        "description": "Allow override WordPress globals"
    },
    "WPCS: precision alignment ok": {
        "prefix": "wpcs_precision_alignment",
        "body": "// phpcs:ignore WordPress.Sniffs.PrecisionAlignment",
        "description": "Ignore precision alignment"
    },
    "WPCS: prefix ok": {
        "prefix": "wpcs_prefix",
        "body": "// phpcs:ignore WordPress.NamingConventions.PrefixAllGlobals",
        "description": "Allow non-prefixed function/class/variable/constant in the global namespace"
    },
    "WPCS: PreparedSQLPlaceholders replacement count ok": {
        "prefix": "wpcs_preparedsql",
        "body": "// WPCS: PreparedSQLPlaceholders replacement count ok.",
        "description": "Allow preparedSQL placeholders vs replacements"
    },
    "WPCS: sanitization ok": {
        "prefix": "wpcs_sanitization",
        "body": "// phpcs:ignore WordPress.Security.ValidatedSanitizedInput.InputNotSanitized",
        "description": "Allow unsanitized code"
    },
    "WPCS: slow query ok": {
        "prefix": "wpcs_slow_query",
        "body": "// phpcs:ignore WordPress.VIP.SlowQuery",
        "description": "Allow slow query"
    },
    "WPCS: spelling ok": {
        "prefix": "wpcs_spelling",
        "body": "// phpcs:ignore: WordPress.WP.CapitalPDangit",
        "description": "Allow incorrect \"WordPress\" spelling"
    },
    "WPCS: unprepared SQL ok": {
        "prefix": "wpcs_unprepared_sql",
        "body": "// phpcs:ignore WordPress.DB.PreparedSQL.NotPrepared",
        "description": "Allow unprepared SQL query"
    },
    "WPCS: XSS ok": {
        "prefix": "wpcs_xss",
        "body": "// phpcs:ignore WordPress.Security.EscapeOutput.OutputNotEscaped",
        "description": "Allow unescaped code"
    }
}
