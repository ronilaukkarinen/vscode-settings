{
  "name": "file-it",
  "version": "1.0.24",
  "description": "Easily read/write/update JSON files",
  "main": "dist",
  "types": "dist/index.d.js",
  "scripts": {
    "build": "tsc",
    "prepare": "yarn build",
    "test": "yarn build && mocha -r ts-node/register test/**/*.ts --reporter spec --timeout 20000 --exit",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "version": "yarn format && git add -A src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swdotcom/file-it.git"
  },
  "keywords": [
    "read",
    "write",
    "file",
    "json",
    "fs"
  ],
  "publisher": "softwaredotcom",
  "author": "software",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/swdotcom/file-it/issues"
  },
  "homepage": "https://github.com/swdotcom/file-it#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.14",
    "chai": "^4.2.0",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "standard": "^14.3.4",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@types/universalify": "^1.0.0",
    "universalify": "^1.0.0"
  }
}