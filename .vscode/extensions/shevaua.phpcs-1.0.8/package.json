{
	"name": "phpcs",
	"description": "PHP CodeSniffer for Visual Studio Code",
	"version": "1.0.8",
	"author": "Ioannis Kappas",
	"publisher": "shevaua",
	"contributors": [
		{
			"email": "sheva@shevaua.info",
			"name": "Igor Sheviakov"
		}
	],
	"license": "MIT",
	"galleryBanner": {
		"color": "#6082bb",
		"theme": "dark"
	},
	"icon": "phpcs_icon.png",
	"homepage": "https://github.com/shevaua/vscode-phpcs/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/shevaua/vscode-phpcs.git"
	},
	"bugs": {
		"url": "https://github.com/shevaua/vscode-phpcs/issues"
	},
	"categories": [
		"Programming Languages",
		"Linters"
	],
	"engines": {
		"vscode": "^1.20.0"
	},
	"activationEvents": [
		"onLanguage:php"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "PHP CodeSniffer configuration",
			"properties": {
				"phpcs.enable": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Control whether phpcs is enabled for PHP files or not."
				},
				"phpcs.executablePath": {
					"scope": "resource",
					"type": "string",
					"default": null,
					"description": "Optional. The path to the phpcs executable."
				},
				"phpcs.composerJsonPath": {
					"scope": "resource",
					"type": "string",
					"default": "composer.json",
					"description": "The path to composer.json"
				},
				"phpcs.standard": {
					"scope": "resource",
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "Optional. The name or path of the coding standard to use. Defaults to the one set in phpcs global config."
				},
				"phpcs.autoConfigSearch": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Automatically search for any `phpcs.xml`, `phpcs.xml.dist`, `phpcs.ruleset.xml` or `ruleset.xml` file to use as configuration. Overrides custom standards defined above."
				},
				"phpcs.ignorePatterns": {
					"scope": "resource",
					"type": "array",
					"items": {
						"type": "string",
						"title": "A glob pattern to skip files and folders that match."
					},
					"default": [],
					"description": "An array of glob patterns to skip files and folders that match when linting your documents."
				},
				"phpcs.ignoreSource": {
					"scope": "resource",
					"type": "array",
					"items": {
						"type": "string",
						"title": "Source of the file"
					},
					"default": [],
					"description": "An array of ignored sources. It could be file, gitfs or another file system of any extension"
				},
				"phpcs.errorSeverity": {
					"scope": "resource",
					"type": "number",
					"default": 5,
					"minimum": 0,
					"description": "The minimum severity an error must have to be displayed."
				},
				"phpcs.warningSeverity": {
					"scope": "resource",
					"type": "number",
					"default": 5,
					"minimum": 0,
					"description": "The minimum severity a warning must have to be displayed."
				},
				"phpcs.showWarnings": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Control whether warnings are displayed."
				},
				"phpcs.showSources": {
					"scope": "resource",
					"type": "boolean",
					"default": false,
					"description": "Show sniff source codes in diagnostic messages."
				},
				"phpcs.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VSCode and the language server."
				},
				"phpcs.lintOnType": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Lint document when typing"
				},
				"phpcs.lintOnOpen": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Lint document when open it"
				},
				"phpcs.lintOnSave": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Lint document when save it"
				},
				"phpcs.queueBuffer": {
					"scope": "resource",
					"type": "integer",
					"default": 10,
					"description": "Size of queued documents"
				},
				"phpcs.lintOnlyOpened": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Lint only opened files"
				}
			}
		}
	},
	"scripts": {
		"build": "vsce package",
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"preinstall": "rimraf node_modules",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "mocha -r ts-node/register --ui tdd --timeout 10000 test/**/*.test.ts",
		"clean": "rimraf out"
	},
	"devDependencies": {
		"vscode": "^1.1.36"
	},
	"dependencies": {
		"vscode-languageclient": "^5.2.1"
	},
	"__metadata": {
		"id": "5847527d-5761-42aa-a21e-276c8831a57d",
		"publisherId": "5986660a-cdb5-42f5-8812-1c2b4ae5cc04",
		"publisherDisplayName": "shevaua"
	}
}