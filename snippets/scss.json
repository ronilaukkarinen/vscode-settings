{
  "Media query ": {
    "prefix": "media",
    "body": [
      "@media (max-width: ${1:}) {",
      "  ${2:}",
      "}"
    ]
  },
  "Media query for mobile": {
    "prefix": "mobile",
    "body": [
      "@media (max-width: \\$container-mobile) {",
      "  ${1:}",
      "}"
    ]
  },
  "Media query for iPad": {
    "prefix": "ipad",
    "body": [
      "@media (max-width: \\$container-ipad) {",
      "  ${1:}",
      "}"
    ]
  },
  "Full width CSS Grid column": {
    "prefix": "fullwidth",
    "body": [
      "grid-column: 1 / -1;"
    ]
  },
  "Grid Template Columns": {
    "prefix": "gridtemplate",
    "body": [
      "grid-template-columns: 605px minmax(0, 1fr);"
    ]
  },
  "CSS Grid": {
    "prefix": "grid",
    "body": [
      "display: grid;",
      "gap: 5rem;",
      "grid-template-columns: repeat(${1:3}, minmax(0, 1fr));"
    ]
  },
  "CSS Grid minmax columns": {
    "prefix": "minmax",
    "body": [
      "display: grid;",
      "gap: 5rem;",
      "",
      "@media (min-width: \\$container-ipad-landscape) {",
      "  grid-template-columns: 605px minmax(0, 1fr);",
      "}"
    ]
  },
  "Clamp": {
    "prefix": "clamp",
    "body": [
      "font-size: clamp-calc(\\$container-mobile, 1600px, 26px, ${1:40}px);"
    ]
  }
}
