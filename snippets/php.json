      "  <?php wp_reset_postdata(); ?>",
      "<?php endif; ?>"
    ]
  },
  "Posts loop with cols": {
    "prefix": "posts_cols",
    "body": [
      "<?php if ( $$1->have_posts() ) : ?>",
      "",
      "  <div class=\"cols\">",
      "    <?php while ( $$1->have_posts() ) : $$1->the_post(); ?>",
      "",
      "      <div class=\"col col-$2\">",
      "        $0",
      "      </div>",
      "",
      "    <?php endwhile; ?>",
      "  </div>",
      "  <?php wp_reset_postdata(); ?>",
      "",
      "<?php endif; ?>"
    ]
  },
  "Cols loop": {
    "prefix": "cols",
    "body": [
      "  <$1 class=\"cols\">",
      "    <?php foreach ( $$3 as $$4 ) : ?>",
      "",
      "      <$2 class=\"col col-$5\">",
      "        $0",
      "      </$2>",
      "",
      "    <?php endforeach; ?>",
      "  </$1>"
    ]
  },
